<Window x:Class="Keen5LevelEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Keen5LevelEditor" Height="600" Width="800"
        SizeToContent="Width"
        KeyUp="Window_KeyUp"
        >

    <ScrollViewer>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Name="Header">
                <StackPanel Orientation="Horizontal">
                    <Button Name="saveFile" Click="saveFile_Click">Save</Button>
                    <TextBox Name="textboxTileWidth" Width="40" Text="32" ToolTip="Tile Width"></TextBox>
                    <TextBox Name="textboxTileHeight" Width="40" Text="32" ToolTip="Tile Height"></TextBox>
                    <TextBox Name="textboxLevelWidth" Width="40" ToolTip="Level Width"></TextBox>
                    <TextBox Name="textboxLevelHeight" Width="40" ToolTip="Level Height"></TextBox>
                    <RadioButton GroupName="TileType" Name="foregroundRadio" Margin="3" IsChecked="True">Foreground</RadioButton>
                    <RadioButton GroupName="TileType" Name="backgroundRadio" Margin="3">Background</RadioButton>
                    <Button Name="loadSave" Click="loadSave_Click">Load Saved File</Button>
                    <Button Name="loadImageSrc" Click="loadImageSrc_Click">Load Image Source</Button>
                    <Label Name="loadImageSrcLabel" Visibility="Collapsed">Filename</Label>
                </StackPanel>
            </StackPanel> 
            <ScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Visible">
            <StackPanel DockPanel.Dock="Left" Name="TileList" HorizontalAlignment="Center" Margin="10,0">
            </StackPanel>
            </ScrollViewer>
            <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" MaxWidth="750" MaxHeight="500" VerticalAlignment="Top">
                <StackPanel DockPanel.Dock="Left" Name="Body" HorizontalAlignment="Center" Margin="10,0">
                </StackPanel>
            </ScrollViewer>
            <StackPanel DockPanel.Dock="Left" Name="TileProperties" HorizontalAlignment="Center" Margin="10,0">
                <ToggleButton Name="buttonTopCollision" Click="propertyButton_Click" Visibility="Collapsed">Top Collision</ToggleButton>
                <ToggleButton Name="buttonRightCollision" Click="propertyButton_Click" Visibility="Collapsed">Right Collision</ToggleButton>
                <ToggleButton Name="buttonBottomCollision" Click="propertyButton_Click" Visibility="Collapsed">Bottom Collision</ToggleButton>
                <ToggleButton Name="buttonLeftCollision" Click="propertyButton_Click" Margin="0,0,0,10" Visibility="Collapsed">Left Collision</ToggleButton>
                <TextBox Name="textBoxLeftHeight" KeyUp="TileHeight_KeyUp" ToolTip="Left Height (Sloped Tiles Only)" Text="0" Visibility="Collapsed" />
                <TextBox Name="textBoxRightHeight" KeyUp="TileHeight_KeyUp" ToolTip="Right Height (Sloped Tiles Only)" Text="0" Margin="0,0,0,10" Visibility="Collapsed" />
                <ToggleButton Name="buttonIsPole" Click="mutexPropertyButton_Click" Visibility="Collapsed">Is Pole</ToggleButton>
                <ToggleButton Name="buttonIsEdge" Click="buttonIsEdge_Click" Visibility="Collapsed">Is Edge</ToggleButton>
                <Label Name="labelLayer" HorizontalAlignment="Center" Visibility="Collapsed">0</Label>
                <TextBox Name="textBoxNotes" Height="100" MaxWidth="90" TextWrapping="Wrap" AcceptsReturn="True" Visibility="Collapsed"></TextBox>
            </StackPanel>
        </DockPanel>
    </ScrollViewer>
</Window>
